// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id            String   @id @default(cuid())
  name          String
  type          String   // "ai_journey" or "dog_content"
  platforms     String[] // ["tiktok", "instagram"]
  nicheKeywords String[]
  createdAt     DateTime @default(now())

  videos          Video[]
  ideas           Idea[]
  accountMetrics  AccountMetric[]
  streaks         Streak[]
  aiConversations AIConversation[]
  trendReports    TrendReport[]
}

model Video {
  id          String    @id @default(cuid())
  accountId   String
  account     Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  title       String
  script      String?
  caption     String?
  hashtags    String[]
  hook        String?
  duration    Int       // 30, 45, or 60 seconds
  status      String    // "planned", "filmed", "edited", "posted"
  postedDate  DateTime?
  scheduledDate DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  metrics     VideoMetric[]
  notes       MediaNote?
}

model VideoMetric {
  id         String   @id @default(cuid())
  videoId    String
  video      Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  platform   String   // "tiktok" or "instagram"
  views      Int      @default(0)
  likes      Int      @default(0)
  comments   Int      @default(0)
  shares     Int      @default(0)
  recordedAt DateTime @default(now())
}

model AccountMetric {
  id             String   @id @default(cuid())
  accountId      String
  account        Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  platform       String   // "tiktok" or "instagram"
  followers      Int      @default(0)
  // Instagram-specific
  reach          Int?
  impressions    Int?
  profileViews   Int?
  engagementRate Float?
  // TikTok-specific
  totalViews     Int?
  totalLikes     Int?
  totalComments  Int?
  totalShares    Int?
  recordedAt     DateTime @default(now())
}

model Idea {
  id          String   @id @default(cuid())
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  title       String
  description String?
  priority    Int      @default(3) // 1-5
  status      String   @default("new") // "new", "in_progress", "used", "archived"
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MediaNote {
  id         String   @id @default(cuid())
  videoId    String   @unique
  video      Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  whatWorked String?
  whatDidnt  String?
  tryNext    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Streak {
  id               String    @id @default(cuid())
  accountId        String    @unique
  account          Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  currentStreak    Int       @default(0)
  longestStreak    Int       @default(0)
  lastActivityDate DateTime?
  totalXP          Int       @default(0)
}

model Task {
  id          String    @id @default(cuid())
  accountId   String
  title       String
  description String?
  type        String    @default("reminder") // "metrics_update", "post_video", "reminder"
  priority    Int       @default(3) // 1-5
  status      String    @default("pending") // "pending", "completed", "snoozed"
  dueDate     DateTime?
  completedAt DateTime?
  videoId     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AIConversation {
  id        String   @id @default(cuid())
  accountId String?
  account   Account? @relation(fields: [accountId], references: [id], onDelete: SetNull)
  messages  Json     // Array of {role, content, timestamp}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TrendReport {
  id          String   @id @default(cuid())
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  provider    String   // "claude", "gpt4", "gemini", "grok"
  content     Json     // Structured trend data
  generatedAt DateTime @default(now())
}
